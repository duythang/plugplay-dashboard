mixin flash-messages(messages)
	if messages
		#flash-messages
			each message in messages.info
				+flash-message(message, 'blue')
			each message in messages.success
				+flash-message(message, 'green')
			each message in messages.warning
				+flash-message(message, 'yellow')
			each message in messages.error
				+flash-message(message, 'red')
				
mixin flash-message(message, type)
		div(class='w3-panel w3-display-container w3-' + type)
			span(onclick="this.parentElement.style.display='none'" class='w3-button w3-large w3-display-topright w3-' + type ) &times;
			if utils.isObject(message)
				if message.title
					h5= message.title
				if message.detail
					p= message.detail
				if message.list
					ul
						each item in message.list
							li= item
			else
				p= message