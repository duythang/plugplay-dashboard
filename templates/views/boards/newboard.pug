extends ../../layouts/default
include ../../mixins/flash-messages

block content
    .w3-content
        .w3-row-padding.w3-padding-128
            .w3-modal-content.w3-card-4.w3-round(style='max-width:600px')
                .w3-container   
                    h3.w3-margin #{__('templates.newboard.header')} 
                    form.w3-content.w3-margin(action= locale+"/createboard" method="post")
                        +flash-messages(messages)
                        .w3-section
                            label
                                b #{__('templates.newboard.title')} 
                            input.w3-input.w3-border.w3-margin-bottom(type='text' placeholder=__('templates.newboard.title_holder') name='title' required='' value=form.title)
                            label
                                b #{__('templates.newboard.type')} 
                            select.w3-select.w3-border(name="type")
                                option(value="" disabled selected).w3-text-black #{__('templates.newboard.choose_opt')} 
                                if form.type === "Public"
                                    option(value="Public" selected ) #{__('templates.newboard.public')} 
                                else
                                    option(value="Public") #{__('templates.newboard.public')} 
                                if user.type != 'Free'
                                    if form.type === "Private"
                                        option(value="Private" selected) #{__('templates.newboard.private')} 
                                    else 
                                        option(value="Private") #{__('templates.newboard.private')}  
                            button.w3-button.w3-block.w3-gray.w3-section.w3-padding.w3-hover-green(type='submit') #{__('templates.newboard.create')} 