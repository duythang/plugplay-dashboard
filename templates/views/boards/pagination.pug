.w3-row-padding.w3-padding-32                  
.w3-bar.w3-border.w3-light-grey
    if data.boards.totalPages > 0
        if data.boards.previous
            a.w3-bar-item.w3-button(href='?page=' + data.boards.previous) &laquo
        else
            a.w3-bar-item.w3-button(href='?page=' + 1) &laquo

        for p, i in data.boards.pages
            a.w3-bar-item.w3-button(class=data.boards.currentPage === p ? 'active' : null, href='?page=' + (p === '...' ? (i ? data.boards.totalPages : 1 ) :  p ) )= p

        if data.boards.next
            a.w3-bar-item.w3-button(href='?page=' + data.boards.next) &raquo
        else
            a.w3-bar-item.w3-button(href='?page=' + data.boards.totalPages) &raquo