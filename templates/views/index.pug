extends ../layouts/default

block content
	//- First Grid
	.w3-row-padding.w3-padding-128.w3-container
		.w3-content.w3-center.w3-margin-top.w3-white
			img.w3-image(src="images/img_logo.png" style="width:550px;")
			p.w3-xlarge  #{__('templates.index.sologan')}
			button.w3-button.w3-gray.w3-large.w3-margin-top.w3-hover-green(onclick="login()") #{__('templates.index.try_now')}
	
			script.
				function login(){
					window.location = '#{locale}'+'/login';
				}
	
	//- Second Grid
	#contact.w3-row-padding.w3-padding-128.w3-container.w3-light-grey
		.w3-content.w3-center
			.w3-half
				i.fa.fa-users.w3-xxlarge 
				h3 
					b #{totalUser}
					|  #{__('templates.index.users')}
			.w3-half
				i.fa.fa-bar-chart.w3-xxlarge 
				h3 
					b #{totalBoard}
					|  #{__('templates.index.boards')}
	
	//- Third Grid
	.w3-row-padding.w3-padding-64.w3-container
		.w3-content.w3-center
			p.w3-xlarge #{__('templates.index.line_01')}
				b  PlugPlay 
				| #{__('templates.index.line_02')}
			img.w3-image.w3-margin-top(src="images/img_arch.png"  style="width:550px;")
	hr 
	
	//- Four Grid
	.w3-row-padding.w3-padding-64.w3-container
		.w3-content
			.w3-third
				i.fa.fa-gears.w3-xxlarge 
				h2 #{__('templates.index.features')}
				p  
					span.w3-badge.w3-green.w3-margin-right 1
					| Connection service
				p  
					span.w3-badge.w3-green.w3-margin-right 2
					| Dashboard service
				p  
					span.w3-badge.w3-green.w3-margin-right 3
					| Data Logging service
				p  
					span.w3-badge.w3-green.w3-margin-right 4
					| MQTT and RESTful
				p  
					span.w3-badge.w3-green.w3-margin-right 5
					| Open API
			.w3-third
				i.fa.fa-microchip.w3-xxlarge 
				h2 #{__('templates.index.hardware')}
				p  
					span.w3-badge.w3-green.w3-margin-right 1
					| Arduino
				p  
					span.w3-badge.w3-green.w3-margin-right 2
					| Raspberry Pi
			.w3-third
				i.fa.fa-stack-overflow.w3-xxlarge
				h2  #{__('templates.index.language')}
				p  
					span.w3-badge.w3-green.w3-margin-right 1
					| C/C++
				p  
					span.w3-badge.w3-green.w3-margin-right 2
					| Python
				p  
					span.w3-badge.w3-green.w3-margin-right 3
					| C#
				p  
					span.w3-badge.w3-green.w3-margin-right 4
					| Java
				p  
					span.w3-badge.w3-green.w3-margin-right 5
					| Javascript
	hr 
	
	//- Five Grid
	.w3-row-padding.w3-padding-16.w3-container
		.w3-content.w3-center
			p.w3-xlarge #{__('templates.index.team')}
			img.w3-image.w3-circle.w3-margin-top(src="images/img_avatar.png"  style="width:80px;")
			p Thang Phan