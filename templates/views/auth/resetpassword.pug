extends ../../layouts/default
include ../../mixins/flash-messages

block content
    .w3-content
        .w3-row-padding.w3-padding-128
            .w3-modal-content.w3-card-8.w3-animate-zoom(style='max-width:400px')
                .w3-center
                    br
                    a(href= locale)
                        img.w3-margin-top(src='/images/img_avatar.png', alt='Avatar', style='width:20%')
                +flash-messages(messages)
                form.w3-container(action= locale+'/resetpassword' method="post")
                    .w3-section
                        input.w3-input(type='hidden' name='resetkey' value=key)
                        input.w3-input(type='hidden' name='_csrf' value=csrf_token_value)
                        label
                            b #{__('templates.resetpwd.pwd')} 
                        input.w3-input.w3-border.w3-margin-bottom(type='password', placeholder=__('templates.resetpwd.pwd_holder'), name='password', required='')
                        label
                            b #{__('templates.resetpwd.confirm_pwd')} 
                        input.w3-input.w3-border.w3-margin-bottom(type='password', placeholder=__('templates.resetpwd.confirm_pwd_holder'), name='password_confirm', required='')
                        button.w3-button.w3-block.w3-gray.w3-section.w3-padding.w3-hover-green(type='submit') #{__('templates.resetpwd.reset')}  