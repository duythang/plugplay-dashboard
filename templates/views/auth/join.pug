extends ../../layouts/default
include ../../mixins/flash-messages

block content
    .w3-content
        .w3-row-padding.w3-padding-128
            .w3-modal-content.w3-card-8.w3-animate-zoom(style='max-width:400px')
                .w3-center
                    br
                    a(href='/')
                        img.w3-margin-top(src='/images/img_avatar.png', alt='Avatar', style='width:20%')
                +flash-messages(messages)
                form.w3-container(action='/join', method="post")
                    .w3-section
                        label: b Username
                        input.w3-input.w3-border.w3-margin-bottom(type='text', placeholder='Enter Username', name='username', required='')
                        .w3-row
                            .w3-col(style="width:45%")
                                label: b First Name
                                input.w3-input.w3-border.w3-margin-bottom(type='text' placeholder='First name' name='firstname' required='')
                            .w3-col(style="width:10%")
                                label  &nbsp
                            .w3-col(style="width:45%")
                                label: b Last Name
                                input.w3-input.w3-border.w3-margin-bottom(type='text' placeholder='Last name' name='lastname' required='')
                        label: b Email
                        input.w3-input.w3-border.w3-margin-bottom(type='email', placeholder='Enter Email', name='email', required='')
                        label: b Password
                        input.w3-input.w3-border.w3-margin-bottom(type='password', placeholder='Enter Password', name='password', required='')
                        label: b Confirm Password
                        input.w3-input.w3-border.w3-margin-bottom(type='password', placeholder='Confirm Password', name='password_confirm', required='')
                        button.w3-button.w3-block.w3-gray.w3-section.w3-padding.w3-hover-green(type='submit') Join
                .w3-container.w3-border-top.w3-padding-16.w3-light-grey
                    span.w3-right.w3-padding
                        | Forgot 
                        a(href='/forgotpassword') password?
                    span.w3-left.w3-padding
                        a(href='/signin') Signin?