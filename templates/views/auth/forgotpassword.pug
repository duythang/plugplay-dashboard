extends ../../layouts/default
include ../../mixins/flash-messages

block content
    .w3-content
        .w3-row-padding.w3-padding-128
            .w3-modal-content.w3-card-8.w3-animate-zoom(style='max-width:400px')
                .w3-center
                    br
                    a(href= locale)
                        img.w3-margin-top(src='/images/img_avatar.png', alt='Avatar', style='width:20%')
                +flash-messages(messages)
                form.w3-container(action= locale+'/forgotpassword' method="post")
                    .w3-section
                        label
                            b #{__('templates.forgotpwd.email')} 
                        input.w3-input.w3-border.w3-margin-bottom(type='email', placeholder=__('templates.forgotpwd.email_holder'), name='email', required='')
                        button.w3-button.w3-block.w3-gray.w3-section.w3-padding.w3-hover-green(type='submit') #{__('templates.forgotpwd.reset')} 

